<% unless comment.archived? %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>

  <p>
    <%= link_to [comment.article, comment], class:"btn btn-danger",data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                } do %>
      <i class="fe fe-trash"></i>
      Destroy Comment
    <% end %>
  </p>
<% end %>

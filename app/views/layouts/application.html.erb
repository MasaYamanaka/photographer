<!DOCTYPE html>
<html>
  <head>
    <title>Photographer</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-cloud">
      <div class="container-fluid navbar-cloud-elem">
        <%= link_to root_path, class:"btn blank", style:"margin-left:3rem" do %>
        <i class="fe fe-home"></i>
        HOME
        <% end %>

        <%= link_to new_article_path, class:"btn btn-primary", style:"float:right;margin-right:3rem" do %>
        <i class="fe fe-plus"></i>
        New Article
        <% end %>

        <button type="button" class="btn blank" style="float:right;margin-right:3rem">
          <%= ENV['USER'] %>@<%= ENV['RAILS_ENV'] %>
        </button>
      </div>
    </nav>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
